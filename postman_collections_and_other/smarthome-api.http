@baseUrl = http://localhost:8080
@temperatureApiUrl = http://localhost:8081
@heatServiceUrl = http://localhost:8082
@host = localhost
@port = 8080
@temperaturePort = 8081

### Health Check
GET {{baseUrl}}/health HTTP/1.1
Host: {{host}}:{{port}}
Accept: application/json

### Get All Sensors
GET {{baseUrl}}/api/v1/sensors HTTP/1.1
Host: {{host}}:{{port}}
Accept: application/json

### Get Sensor by ID
# @name getSensorById
GET {{baseUrl}}/api/v1/sensors/2 HTTP/1.1
Host: {{host}}:{{port}}
Accept: application/json

### Create Sensor
POST {{baseUrl}}/api/v1/sensors HTTP/1.1
Host: {{host}}:{{port}}
Content-Type: application/json
Accept: application/json

{
    "name": "Living Room Temperature",
    "type": "temperature",
    "location": "Living Room",
    "unit": "°C"
}

### Update Sensor
PUT {{baseUrl}}/api/v1/sensors/2 HTTP/1.1
Host: {{host}}:{{port}}
Content-Type: application/json
Accept: application/json

{
    "name": "Updated Living Room Temperature",
    "type": "temperature",
    "location": "Living Room",
    "unit": "°C"
}

### Delete Sensor
DELETE {{baseUrl}}/api/v1/sensors/1 HTTP/1.1
Host: {{host}}:{{port}}
Accept: application/json

### Update Sensor Value
PATCH {{baseUrl}}/api/v1/sensors/1/value HTTP/1.1
Host: {{host}}:{{port}}
Content-Type: application/json
Accept: application/json

{
    "value": 22.5,
    "status": "active"
}

